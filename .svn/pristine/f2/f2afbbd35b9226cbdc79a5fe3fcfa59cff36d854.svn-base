.logintagle {
    margin: auto;
    text-align: center;
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#3f000000',endColorstr='#3f000000');
    background-color: rgba(255, 255, 255, 0.3);
}

.loginbody {
    width: 100%;
    height: 100vh; /* 重点一 */
    background-image: url('../images/wallpictor/banner_slide_01.jpg');
    background-repeat: no-repeat;
    background-size: cover; /* 重点二 */
    animation: frams 13s infinite;
    overflow: auto;

    position: absolute;
    width: 500px;
    height: 300px;
    margin: auto;
    top: -15%;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: green;
}

@keyframes frams {
    0% {
        background-image: url('../images/wallpictor/banner_slide_01.jpg');
        background-size: 100% 100%;
        background-repeat: no-repeat
    }

    33% {
        background-image: url('../images/wallpictor/banner_slide_03.jpg');
        background-size: 100% 100%;
        background-repeat: no-repeat
    }

    66% {
        background-image: url('../images/wallpictor/banner_slide_04.jpg');
        background-size: 100% 100%;
        background-repeat: no-repeat
    }

    100% {
        background-image: url('../images/wallpictor/banner_slide_01.jpg');
        background-size: 100% 100%;
        background-repeat: no-repeat
    }
}

.logintr {
    width: 180px;
    height: 50px;
    margin: auto;
    text-align: center;
}



.loginlabel {
    font-weight: bolder;
    text-align: left;
    width: 20px
}